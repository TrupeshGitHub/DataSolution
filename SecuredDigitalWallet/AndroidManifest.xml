<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.secureddigitalwallet"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/launcher_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="com.example.secureddigitalwallet.TabHostActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.secureddigitalwallet.NavigateContact"/>
        <activity android:name="com.businesscards.BusinessCardsMain" />
        <activity android:name="com.bankingCards.BankingCardsActivity" />
        <activity android:name="com.passwordManager.PasswordManagerActivity" />
        <activity android:name="com.businesscards.AddBusinessCard" />
        <activity android:name="com.businesscards.EditBusinessCard" />
        <activity android:name="com.businesscards.ViewBusinessCard" />
        <activity android:name="com.businesscards.DeleteBusinessCard" />
        <activity android:name="com.bankingCards.ViewBankingcard" />
        <uses-library android:required="true" android:name="com.google.android.maps" />
        
    </application>

</manifest>